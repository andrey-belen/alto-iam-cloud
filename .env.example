# AICODE-NOTE: Environment variables for Alto IAM
# Copy to .env and update with your values

# ============================================================================
# PostgreSQL Database
# ============================================================================
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=keycloak
POSTGRES_DB=keycloak
POSTGRES_PORT=5432

# ============================================================================
# Keycloak Configuration
# ============================================================================
KC_ADMIN_USER=admin
KC_ADMIN_PASSWORD=admin
KC_HTTP_PORT=8080
KC_LOG_LEVEL=INFO

# SMTP Configuration (for sending emails from Keycloak)
KC_SMTP_HOST=mailhog
KC_SMTP_PORT=1025
KC_SMTP_USER=
KC_SMTP_PASSWORD=
KC_SMTP_FROM=noreply@alto.com
KC_SMTP_FROM_DISPLAY_NAME=Alto Security
KC_SMTP_STARTTLS=false
KC_SMTP_AUTH=false

# ============================================================================
# API Server Configuration
# ============================================================================
NODE_ENV=development
API_PORT=3001
LOG_LEVEL=debug

# Database URL for API (uses alto_api database)
DATABASE_URL=postgresql://keycloak:keycloak@localhost:5432/alto_api

# Keycloak API Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=alto-crm

# Keycloak Admin API (for managing users/realms)
# Create a service account client in Keycloak with admin privileges
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_CLIENT_SECRET=your-client-secret-here

# CORS
CORS_ORIGIN=http://localhost:3000

# SMTP Configuration for API email service
SMTP_ENABLED=true
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@alto.com

# Dashboard URL (for email links)
DASHBOARD_URL=http://localhost:3000

# ============================================================================
# CRM Dashboard Configuration
# ============================================================================
CRM_PORT=3000

# Vite environment variables (must be prefixed with VITE_)
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=master
VITE_KEYCLOAK_CLIENT_ID=alto-crm
VITE_API_URL=/api

# ============================================================================
# MailHog (Development Email Testing)
# ============================================================================
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ============================================================================
# Production Overrides (uncomment for production)
# ============================================================================
